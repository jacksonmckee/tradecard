    <h1 class="display-4">Welcome to my Pokemon TCG!</h1>
    <p class="lead">Gotta catch 'em all!</p>
    <a href="/sign">
      <button type="button" class="btn btn-outline-dark">Sign In</button>
    </a>
    <a href="/card">
      <button type="button" class="btn btn-outline-dark">Search Cards</button>
    </a>
  </div>

  <!-- Grid -->
  <div class="containertophomepage">

    <!-- How do I play? -->
    <div class="row">
      <div class="col-md-8">
        <a href="/howtoplay" class="image-link">
          <img src="media/whatistcg.png" class="img-fluid" alt="What is TCG?">
          <div class="badge badge-primary-howdoiplay">
            How to play
          </div>
        </a>
      </div>

      <!-- Carousel of cards -->
      <div class="col-12 col-md-4">

        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">

          <div class="carousel-inner">
            <div class="carousel-item active">
              <a href="/carddetails/12">
                <img src="media/pikachu.png" class="img-fluid" alt="Pikachu">
              </a>
              <div class="badge badge-primary-carousel">
                Our most popular cards
              </div>

            </div>

            <div class="carousel-item">
              <a href="/carddetails/1">
                <img src="media/blastoise.png" class="img-fluid" alt="Blastoise">
              </a>
              <div class="badge badge-primary-carousel">
                Our most popular cards
              </div>

            </div>

            <div class="carousel-item">
              <a href="carddetails/2">
                <img src="media/charizard.png" class="img-fluid" alt="Charizard">
              </a>

              <div class="badge badge-primary-carousel">
                Our most popular cards
              </div>

            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

    </div>

  </div>

