            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <h2>Card Details</h2>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <%= card.card_name %>
                </h5>
                <img src="<%= card.url_img %>" class="card-img-top" alt="Card Image">
                <p class="card-text">Illustrator: <%= card.illustrator %>
                </p>
                <p class="card-text">Rarity ID: <%= card.rarity_id %>
                </p>
                <p class="card-text">Expansion ID: <%= card.expansion_id %>
                </p>
                <p class="card-text">HP: <%= card.hp %>
                </p>
                <p class="card-text">Card Type ID: <%= card.card_type_id %>
                </p>
                <p class="card-text">Description: <%= card.description %>
                </p>
                <p class="card-text">Likes: <%= card.likes %>
                </p>
            </div>
        </div>
    </div>

     <!-- Footer -->

     <div class="card bg-dark text-white">
        <div class="card-body">

            <!-- Social Media Icons -->
            <img id="facebook-logo" src="media/facebooklogo.png" alt="Facebook Logo">
