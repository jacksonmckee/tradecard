<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pokemon TCG - Sign In/Up</title>

  <!-- Bootstrap Stylesheet -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
    integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

  <!-- Custom Stylesheet -->
  <link rel="stylesheet" href="../mystyle.css">

  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.min.js"></script>
  <script src="/app.js"></script>

</head>

<body>

  <!-- Nav Bar -->

  <nav class="navbar navbar-dark bg-dark" id="navbar">
    <a class="navbar-brand" href="/">
      <img id="navbar-image" src="media/transparenttcglogo.png" alt="Pokemon TCG Logo">
      Pokemon TCG
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/discussion">Discussion Forum</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/card">All Cards</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            Expansions
          </a>
          <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="/cards/expansion/1">Base Set</a>
            <a class="dropdown-item" href="/cards/expansion/2">Jungle</a>
            <a class="dropdown-item" href="/cards/expansion/3">Fossil</a>
            <a class="dropdown-item" href="/cards/expansion/4">Base Set 2</a>
          </div>
        </li>
      </ul>
    </div>

  </nav>

  <!-- Jumbotron -->
  <div class="jumbotronsignin">
    <h1 class="display-4">Sign in to your account!</h1>
    <p class="lead">Gotta catch 'em all!</p>
  </div>
  <!-- Sign in for existing users -->

  <div class="container signin">
    <div class="row">

      <div class="col-md-6">
        <h2>Already have an account? Sign In</h2>
        <form action="/signin" method="POST">
          <div class="form-group row">
            <label for="inputEmail" class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-9">
              <input type="email" class="form-control" id="inputEmail" placeholder="Email" name="email">
            </div>
          </div>
          <div class="form-group row">
            <label for="inputPassword" class="col-sm-3 col-form-label">Password</label>
            <div class="col-sm-9">
              <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
              <button type="submit" class="btn btn-primary">Sign In</button>
            </div>
          </div>
        </form>
      </div>

      <!-- Sign up for new users -->
      <div class="col-md-6">
        <h2>Create an Account</h2>
        <form action="/create" method="POST">
          <div class="form-group row">
            <label for="inputName" class="col-sm-3 col-form-label">Name</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="inputName" placeholder="Name" name="user_name">
            </div>
          </div>
          <div class="form-group row">
            <label for="inputEmail" class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-9">
              <input type="email" class="form-control" id="inputEmail" placeholder="Email" name="email">
            </div>
          </div>
          <div class="form-group row">
            <label for="inputPassword" class="col-sm-3 col-form-label">Password</label>
            <div class="col-sm-9">
              <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
            </div>
          </div>
          <div class="form-group row">
            <label for="inputRePassword" class="col-sm-3 col-form-label">Re-enter Password</label>
            <div class="col-sm-9">
              <input type="password" class="form-control" id="inputRePassword" placeholder="Re-enter Password"
                name="re_password">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
              <button type="submit" class="btn btn-primary">Sign Up</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Footer -->

  <div class="card bg-dark text-white">
    <div class="card-body">

      <!-- Social Media Icons -->
      <img id="facebook-logo" src="media/facebooklogo.png" alt="Facebook Logo">
      <img id="x-logo" src="media/xlogo.png" alt="X Logo class=">
      <img id="insta-logo" src="media/instalogo.png" alt="Instagram Logo">

      <p class="card-text text-white">Â© Copyright 2024 Jackson Mckee</p>
    </div>
  </div>
</body>

</html>